                </RelativeLayout>

                <EditText
                    android:id="@+id/edt_additional_pation_information"
                    android:layout_below="@id/patient_condition_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:background="@drawable/background_rectango_stroke_blue"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:gravity="start|top"
                    android:hint="@string/additional_patient_information"
                    android:textColorHint="@color/lightblue700"
                    android:textColor="@color/lightblue700"
                    android:textSize="@dimen/_12ssp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_additional_pation_information"
                    android:weightSum="1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_payment_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/txt_payment_mode"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="italic"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textAlignment="center"/>

                    <Spinner
                        android:id="@+id/spn_payment_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_rectango_stroke_blue"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="0.5"/>
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

