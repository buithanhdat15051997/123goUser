<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:elevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    android:layout_margin="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/background_with_shadow">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/title_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
           >
       <!--     <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_power_off" />-->

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/logout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_logout"
                android:textColor="@color/color_btn_main"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>
        <View
            android:layout_below="@+id/title_group"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black"
            />

        <TextView
            android:gravity="center"
            android:id="@+id/logout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/title_group"
            android:text="@string/logout_text"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_below="@+id/logout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/btn_logout_yes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="0.5"
                android:background="@color/color_btn_main"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/txt_yes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/btn_logout_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
               android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@color/color_red_main"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/txt_no"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>