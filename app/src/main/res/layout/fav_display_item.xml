<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_fav_name_display"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Home"
                android:textStyle="bold"
                android:textColor="@color/lightblueA700"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/tv_fav_address_display"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/cancel_fav"
                android:layout_alignParentLeft="true"
                android:text="Sector 6, HSR Layout, Bengaluru, Karnataka 560102 hjvghjfhvfvhgchghcgcchgchchgchchc"
                android:layout_below="@+id/tv_fav_name_display"
                android:textColor="@color/lightblueA700"
                android:paddingLeft="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="7dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>