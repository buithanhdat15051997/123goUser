<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/lightblue700"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:tint="@color/white"
            app:srcCompat="@drawable/close"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/img_confirm"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_confirm"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/patient_name"
            android:textColor="@color/deeporange600"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/edt_patient_name_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/background_rectango_stroke_blue"
            android:hint="@string/patient_name"
            android:inputType="text"
            android:maxLines="3"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/lightblueA700"
            android:textColorHint="@color/lightblueA700"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ward"
            android:textColor="@color/deeporange600"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/edt_ward_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/background_rectango_stroke_blue"
            android:hint="@string/ward"
            android:inputType="number"
            android:maxLines="2"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/lightblueA700"
            android:textColorHint="@color/lightblueA700"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hospital"
            android:textColor="@color/deeporange600"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/edt_hospital_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/background_rectango_stroke_blue"
            android:hint="@string/hospital"
            android:inputType="text"
            android:maxLines="2"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/lightblueA700"
            android:textColorHint="@color/lightblueA700"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/room_number"
            android:textColor="@color/deeporange600"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/edt_room_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/background_rectango_stroke_blue"
            android:hint="@string/room_number"
            android:inputType="number"
            android:maxLines="2"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/lightblueA700"
            android:textColorHint="@color/lightblueA700"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bed_number"
            android:textColor="@color/deeporange600"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/edt_bed_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/background_rectango_stroke_blue"
            android:hint="@string/room_number"
            android:inputType="number"
            android:maxLines="2"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/lightblueA700"
            android:textColorHint="@color/lightblueA700"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_of_discharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/time_of_discharge"
            android:textColor="@color/deeporange600"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/tv_time_of_discharge_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/background_rectango_stroke_blue"
            android:hint="@string/time_of_discharge"
            android:maxLines="2"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/lightblueA700"
            android:textColorHint="@color/lightblueA700"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

</LinearLayout>