<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="DialogAnimationleftright"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center_horizontal"
    app:layout_constraintCircleRadius="@dimen/_50sdp">

    <TextView
        android:id="@+id/txt_pay_ewallet"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/title_wallet"
        android:textColor="@color/black_text"
        android:textSize="@dimen/_16sdp"
        android:textStyle="italic" />

    <View
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/btn_pay_cancel_wallet"
        android:background="@color/black" />

    <TextView
        android:id="@+id/txt_total_money_wallet"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_pay_ewallet"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="@string/txt_total_pay_wallet"
        android:textColor="@color/black_text"
        android:textSize="@dimen/_16sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_total_money_wallet"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/background_edittext"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/edt_input_money_wallet"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_weight="8"
            android:background="@null"
            android:hint="@string/edt_hint_input_money_wallet"
            android:inputType="numberDecimal|textMultiLine|textNoSuggestions|text|textCapSentences"
            android:textColor="@color/black_text" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_weight="2"
            android:src="@drawable/ic_dollar_wallet" />

    </LinearLayout>


    <ImageView
        android:id="@+id/btn_pay_cancel_wallet"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_toRightOf="@+id/txt_pay_ewallet"
        android:background="@drawable/background_btn_cancel"
        android:src="@drawable/ic_clear_black_24dp" />


    <Button
        android:id="@+id/btn_recharge_ewallet"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/background_btn_confirm"
        android:gravity="center"
        android:text="@string/recharge_wallet"
        android:textColor="@color/white" />

</RelativeLayout>