    <FrameLayout
        android:id="@+id/frame_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/log_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/background_main_app"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:orientation="vertical">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/linear_login_ic_header"
                    android:background="@drawable/background_login_header"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/close" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linear_login_ic_header"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/social_img"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/background_wellcome"/>
                    <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="center"-->
                    <!--android:padding="@dimen/_10sdp"-->
                    <!--android:text="@string/who_you_are"-->
                    <!--android:textAllCaps="true"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="@dimen/_12ssp"-->
                    <!--android:textStyle="bold"/>-->

                </LinearLayout>

                <!--<ImageView
                    android:id="@+id/img_logo_application"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_170sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_application" />-->

            </RelativeLayout>

            <LinearLayout
                android:background="#1dccc8"
                android:id="@+id/login_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background_gradient_line" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background_gradient_line" />


                </LinearLayout>-->
<ScrollView
    android:fillViewport="true"
    android:scrollbarStyle="insideInset"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#1dccc8"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp">
        <TextView
            android:textColor="@color/black_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/login_label"
            android:layout_width="match_parent"
            android:textSize="@dimen/_20sdp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:gravity="center">

            <!--      <ImageView
                      android:layout_width="@dimen/_30sdp"
                      android:layout_height="match_parent"
                      android:src="@drawable/ic_username"
                      android:layout_marginStart="@dimen/_20sdp"
                      android:padding="@dimen/_5sdp"/>-->

            <android.support.design.widget.TextInputLayout
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/white"
                android:outlineSpotShadowColor="@color/white"
                android:outlineAmbientShadowColor="@color/white"
                android:id="@+id/input_layout_userid"
                android:textColorHint="@color/black_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText

                    android:id="@+id/et_login_userid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/white"
                    android:hint="@string/email_mobile"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/black_text"
                    android:textSize="@dimen/_14ssp" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">

            <!--       <ImageView
                       android:layout_width="@dimen/_30sdp"
                       android:layout_height="match_parent"
                       android:src="@drawable/ic_password"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:padding="@dimen/_5sdp"/>
-->
            <android.support.design.widget.TextInputLayout
                android:textColorHint="@color/black_text"
                android:id="@+id/input_layout_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                app:passwordToggleDrawable="@mipmap/eye"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/white"
                    android:hint="@string/login_Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/black_text"
                    android:textSize="@dimen/_14ssp" />

                <ImageButton
                    android:id="@+id/loc_pass"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:padding="10dp"
                    android:src="@mipmap/eye"
                    android:visibility="gone" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#03032b"
            android:gravity="center"
            android:text="@string/login_btn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_new_user"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/new_user_btn"
            android:textColor="@color/black_text"
            android:textSize="@dimen/_12ssp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/txt_social_login"
            android:textColor="@color/black_text"
            android:textSize="@dimen/_10ssp" />
        <RelativeLayout
            android:id="@+id/btn_register_social"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_105sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:id="@+id/iconfacebook"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_facebook"
                android:layout_width="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_height="@dimen/_30sdp" />
            <ImageView
                android:layout_toRightOf="@+id/iconfacebook"
                android:layout_gravity="center"
                android:background="@drawable/ic_google"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="bottom"
            android:paddingStart="@dimen/_10sdp"
            >
            <TextView
                android:id="@+id/btn_forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/forgot_pass_btn"
                android:textColor="@color/black_text"
                android:textSize="@dimen/_10ssp"
                android:textStyle="italic"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
