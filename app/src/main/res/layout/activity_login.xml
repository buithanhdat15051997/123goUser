<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_main"
    android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--</ScrollView>-->
        <FrameLayout
            android:id="@+id/frame_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/log_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/login_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@drawable/background_main_app"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/linear_login_ic_header"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"

                        android:background="@drawable/background_login_header"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:padding="10dp"
                        android:tint="@color/color_background_main"
                        app:srcCompat="@drawable/close" />

                    <LinearLayout
                        android:id="@+id/linear_login_ic_header"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/social_img"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/background_wellcome" />
                        <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="center"-->
                        <!--android:padding="@dimen/_10sdp"-->
                        <!--android:text="@string/who_you_are"-->
                        <!--android:textAllCaps="true"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textSize="@dimen/_12ssp"-->
                        <!--android:textStyle="bold"/>-->

                    </LinearLayout>

                    <!--<ImageView
                        android:id="@+id/img_logo_application"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_170sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo_application" />-->

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/login_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_background_main"
                    android:orientation="vertical">

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/background_gradient_line" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/background_gradient_line" />


                    </LinearLayout>-->
                    <!--<ScrollView
                        android:fillViewport="true"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color_background_main"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_20sdp">

                        <TextView
                            android:fontFamily="@font/questrial_regular"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_27sdp"
                            android:gravity="center"
                            android:text="@string/login_label"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/_22sdp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp">

                            <!--      <ImageView
                                      android:layout_width="@dimen/_30sdp"
                                      android:layout_height="match_parent"
                                      android:src="@drawable/ic_username"
                                      android:layout_marginStart="@dimen/_20sdp"
                                      android:padding="@dimen/_5sdp"/>-->

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_userid"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/white"
                                android:outlineAmbientShadowColor="@color/white"
                                android:outlineSpotShadowColor="@color/white"
                                android:textColorHint="@color/black_text"
                                app:boxBackgroundColor="@color/white"
                                app:errorTextAppearance="@style/error_appearance"
                                app:boxStrokeColor="@color/white">

                                <EditText

                                    android:id="@+id/et_login_userid"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@color/white"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:hint="@string/email_mobile"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:padding="@dimen/_5sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/black_text"
                                    android:textColorHint="@color/black_text"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp">

                            <!--       <ImageView
                                       android:layout_width="@dimen/_30sdp"
                                       android:layout_height="match_parent"
                                       android:src="@drawable/ic_password"
                                       android:layout_marginStart="@dimen/_20sdp"
                                       android:padding="@dimen/_5sdp"/>
                -->
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_pass"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:outlineAmbientShadowColor="@color/white"
                                android:outlineSpotShadowColor="@color/white"
                                android:textColorHint="@color/black_text"
                                android:weightSum="1"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeColor="@color/white"
                                app:errorTextAppearance="@style/error_appearance"
                                app:passwordToggleDrawable="@mipmap/eye"
                                app:passwordToggleEnabled="true">

                                <EditText
                                    android:fontFamily="@font/quicksand_bold"
                                    android:id="@+id/et_login_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@color/white"
                                    android:hint="@string/login_Password"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:padding="@dimen/_5sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/black_text"
                                    android:textColorHint="@color/black_text"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />

                                <ImageButton
                                    android:id="@+id/loc_pass"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@null"
                                    android:padding="10dp"
                                    android:src="@mipmap/eye"
                                    android:visibility="gone" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <Button
                            android:fontFamily="@font/questrial_regular"
                            android:id="@+id/btn_login_main"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/color_btn_login_signin"
                            android:gravity="center"
                            android:text="@string/login_btn"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/new_user_btn"
                                android:textColor="@color/black_text"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:fontFamily="@font/quicksand_bold"
                                android:id="@+id/btn_new_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:autoLink="all"
                                android:gravity="center"
                                android:linksClickable="false"
                                android:onClick="onClick"
                                android:selectAllOnFocus="false"
                                android:text="@string/txt_signup_now"
                                android:textColor="@color/black_text"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:fontFamily="@font/quicksand_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center"
                            android:text="@string/txt_social_login"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/_10ssp" />

                        <RelativeLayout
                            android:id="@+id/btn_register_social"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iconfacebook"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:paddingStart="@dimen/_2sdp"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/ic_facebook" />

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_gravity="center"
                                    android:layout_toRightOf="@+id/iconfacebook"
                                    android:background="@drawable/ic_google"
                                    android:scaleType="fitXY" />

                            </LinearLayout>

                        </RelativeLayout>

                        <!--<RelativeLayout-->
                        <!--android:id="@+id/relative_footer"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/_30sdp"-->
                        <!--android:layout_gravity="bottom"-->
                        <!--android:paddingStart="@dimen/_10sdp"-->
                        <!--&gt;-->

                        <!--</RelativeLayout>-->
                        <TextView
                            android:fontFamily="@font/quicksand_bold"
                            android:id="@+id/btn_forgot_password_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="@string/forgot_pass_btn"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <!--</ScrollView>-->


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</ScrollView><!--  android:background="@drawable/background_oval_stroke" -->
