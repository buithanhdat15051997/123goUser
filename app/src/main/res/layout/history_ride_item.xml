<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"

        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="@dimen/_5sdp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!--<ImageView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="@dimen/_50sdp"-->
                <!--android:layout_weight="0.3"-->
                <!--android:padding="@dimen/_10sdp"-->
                <!--android:scaleX="-1"-->
                <!--app:srcCompat="@drawable/carambulance" />-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_history_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00-00-0000"
                        android:textColor="@color/gray600"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:id="@+id/tv_history_car_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:singleLine="true"
                        android:text="car"
                        android:textColor="@color/gray600"
                        android:textSize="@dimen/_12ssp" />
<LinearLayout
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/_20sdp"
        android:src="@drawable/ic_from"
        android:layout_height="@dimen/_20sdp" />
    <TextView
        android:fontFamily="@font/quicksand_bold"
        android:id="@+id/tv_history_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:singleLine="true"
        android:text="Source"
        android:textColor="@color/gray600"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>

<LinearLayout
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/_20sdp"
        android:src="@drawable/ic_to"
        android:layout_height="@dimen/_20sdp" />
    <TextView
        android:fontFamily="@font/quicksand_bold"
        android:id="@+id/tv_history_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:text="Destination"
        android:textColor="@color/gray600"
        android:textSize="@dimen/_12sdp" />
</LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:weightSum="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_weight="0.3"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="@dimen/_10ssp"
                        android:text="@string/btn_confirm"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/txt_status_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_weight="0.7"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:id="@+id/tv_history_driver_name"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:maxLines="3"
                        android:text="@string/txt_driver"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/_9ssp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_history_img"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:src="@drawable/defult_user" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:fontFamily="@font/quicksand_bold"
                android:textStyle="bold"
                android:id="@+id/tv_history_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="00"
                android:textColor="@color/color_btn_main"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>