<resources>

    <!--style item bottom navigation-->

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <!--style error input login-->
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>
<!--remove default check radio button-->
    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/radiobutton_selector</item>
        <item name="android:button">@null</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogSlideAnim_leftright_Fullscreen" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/DialogAnimationleftright</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/color_background_main</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="mystyle.ProgressBar.Horizontal" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>


    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!--full width for dialog-->
    <style name="Custom_Dialog" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">65%</item>
    </style>


    <style name="DialogAnimationleftright">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
    <!-- Animation for full scree dialog box -->

    <style name="DialogThemeforview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationleftright</item>
    </style>

    <style name="DialogSlideAnim_leftright" parent="@android:style/Theme.Dialog">

        <item name="android:windowAnimationStyle">@style/DialogAnimationleftright</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/lightblueA700</item>
        <item name="colorPrimaryDark">@color/lightblueA700</item>
        <item name="colorAccent">@color/lightblueA700</item>

    </style>

    <style name="Color1SwitchStyle">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/circle_color</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/circle_color</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/circle_color</item>
    </style>

    <style name="defaultFont">
        <item name="android:typeface">serif</item>
    </style>

    <style name="NoActionBarTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NoActionBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
